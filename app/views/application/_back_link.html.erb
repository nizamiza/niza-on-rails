<% path = local_assigns.fetch(:path, root_path) %>

<%= link_to(path, class: "back-link") do %>
  <%= render "icon/arrow" %>
  <%= t "back_to", path: t_route(path).downcase %>
<% end %>

<% content_for_styles "back-link" do %>
  <style>
    .back-link {
      color: inherit;
    }
  </style>
<% end %>
