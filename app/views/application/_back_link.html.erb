<% path = local_assigns.fetch(:path, "/") %>

<%= link_to(path, class: "back-link") do %>
  <%= render "icon/arrow" %>
  Back to <%= path == "/" ? "root" : path.gsub("/", "") %>
<% end %>

<% content_for_head_once "back-link" do %>
  <style>
    .back-link {
      color: inherit;
    }
  </style>
<% end %>

