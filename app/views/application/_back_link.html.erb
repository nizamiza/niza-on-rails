<% default_path = localize_path(path: "/") %>
<% path = local_assigns.fetch(:path, default_path) %>
<% path_name = path == default_path ? t("home.title") : path.gsub("/", "") %>

<%= link_to(path, class: "back-link") do %>
  <%= render "icon/arrow" %>
  <%= t "back_to", path: path_name.downcase %>
<% end %>

<% content_for_head_once "back-link" do %>
  <style>
    .back-link {
      color: inherit;
    }
  </style>
<% end %>
