<figure class="avatar-figure">
  <div class="noise" role="img"></div>
  <%= image_tag "me.jpeg",
    class: "avatar-img",
    alt: "Photo of Niza Toshpulatov",
    width: 160,
    height: 160
  %>
  <figcaption class="sr-only">
    <p>
      Photo of Niza Toshpulatov
    </p>
  </figcaption>
</figure>

<% content_for_head_once "avatar" do %>
  <style>
    .avatar-img {
      --size: 10rem;

      width: var(--size);
      height: var(--size);
      object-fit: cover;
    }

    .avatar-figure {
      position: relative;
      border-radius: var(--br-full);
      overflow: hidden;
      order: -1;
    }
  </style>
<% end %>
