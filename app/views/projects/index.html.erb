<% content_for :page_title do %>Projects<% end %>
<% content_for :page_description do %>Here, you can find a list of projects I have worked on.<% end %>
<% content_for :page_header_color do %>pink<% end %>
<% content_for :page_header do %>
  <p>
    Here, you can find some of the projects I have worked on outside of client
    and contract work.
  </p>
  <%= render "application/back_link" %>
<% end %>
<main>
  <section class="section">
    <h2 class="sr-only">My Projects</h2>
    <%= render "project_list", projects: @projects %>
  </section>
  <section class="section">
    <h2 class="h4">Wanna see more?</h2>
    <p>
      If you want to check out more of my projects, visit
      <%= render "application/github_link" do %>
        my GitHub profile
      <% end %>.
    </p>
  </section>
</main>

